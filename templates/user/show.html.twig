{% extends 'base.html.twig' %}

{% block title %}Compte
{% endblock %}

{% block body %}
	<div class="container text-center py-5">
		<h1 class="text-center text-dark fs-1">Informations du compte</h1>
	</div>
	<div class="container mt-4 d-flex justify-content-center">
		<div class="border mb-2" style="width:50%;">
			<div class="card-body d-flex flex-row justify-content-evenly">
				<div>
					<h2 class="card-title">{{ user.prenom }}
						{{ user.nom }}</h2>
					<p class="card-text"></p>
					<p class="text-primary">Email:</p>
					<p class="text-black">{{ user.email }}</p>
				</div>
				<div class="d-flex justify-content-between flex-column">
					<a href="{{ path('app_orders_show') }}" class="btn btn-success btn-rounded-none mx-2">Commandes</a>
					<a href="{{ path('app_logout') }}" class="btn btn-danger btn-rounded-none mx-2">Déconnexion</a>
					{% if is_granted('ROLE_ADMIN') %}
						<a class="btn btn-warning btn-rounded-none mx-2" href="{{path('admin')}}">Panel admin</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
	<div class="container  d-flex justify-content-center">
		<a href="{{path('home.index')}}" class="btn btn-primary btn-rounded-none">Retour à l'accueil</a>
	</div>
{% endblock %}